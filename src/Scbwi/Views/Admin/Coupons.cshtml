@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Coupons";
}

<div layout="column" flex ng-controller="CouponController as main">
    <md-toolbar class="md-toolbar">
        <div class="md-toolbar-tools">
            <h3>
                Coupons
            </h3>
        </div>
    </md-toolbar>

    <md-content layout="column" class="bgBody" layout-align="top start" flex layout-padding md-scroll-y layout-fill>
        <form name="packageform">
            <md-card>
                <md-card-title>
                    <h4>Existing Coupons</h4>
                </md-card-title>
                <md-card-content>
                    <table>
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Value</th>
                                <th>Code</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="coupon in main.coupons">
                                <td>{{coupon.type}}</td>
                                <td>{{coupon.value}}</td>
                                <td>{{coupon.text}}</td>
                            </tr>
                        </tbody>
                    </table>
                </md-card-content>
            </md-card>
            <md-card>
                <md-card-title>
                    <md-card-title-text>
                        <h4>Add New Coupon</h4>
                    </md-card-title-text>
                </md-card-title>
                <md-divider></md-divider>
                <md-card-content>
                    <md-input-container>
                        <label>Type</label>
                        <md-select ng-model="main.newcoupon.type">
                            <md-option value="0">Percent</md-option>
                            <md-option value="1">Total</md-option>
                            <md-option value="2">Critique</md-option>
                        </md-select>
                    </md-input-container>
                    <md-input-container>
                        <label>Value</label>
                        <input type="text" ng-model="main.newcoupon.value" />
                    </md-input-container>
                    <md-input-container>
                        <label>Code</label>
                        <input type="text" ng-model="main.newcoupon.text" />
                    </md-input-container>
                </md-card-content>
                <md-card-actions layout="row" layout-align="end center">
                    <md-button ng-click="main.Submit()" class="md-raised md-primary">Submit</md-button>
                </md-card-actions>
            </md-card>
        </form>
    </md-content>
</div>