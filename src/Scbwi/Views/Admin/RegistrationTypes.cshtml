@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Registration Types";
}

<div layout="column" flex ng-controller="PackageController as main">
    <md-toolbar class="md-toolbar">
        <div class="md-toolbar-tools">
            <h3>
                Registration Types
            </h3>
        </div>
    </md-toolbar>

    <md-content layout="column" class="bgBody" layout-align="top start" flex layout-padding md-scroll-y layout-fill>
        <form name="packageform">
            <md-card>
                <md-card-title>
                    <h4>Existing Registration Types</h4>
                </md-card-title>
                <md-card-content>
                    <table>
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Regular Price</th>
                                <th>Late Price</th>
                                <th>Member Price</th>
                                <th>Max Attendees</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="package in main.packages">
                                <td>{{package.title}}</td>
                                <td>{{package.description}}</td>
                                <td>{{package.regularprice}}</td>
                                <td>{{package.lateprice}}</td>
                                <td>{{package.member === true ? "yes" : "no"}}</td>
                                <td>{{package.max}}</td>
                            </tr>
                        </tbody>
                    </table>
                </md-card-content>
            </md-card>
            <md-card>
                <md-card-title>
                    <md-card-title-text>
                        <h4>Add New Registration Type</h4>
                    </md-card-title-text>
                </md-card-title>
                <md-divider></md-divider>
                <md-card-content>
                    <md-checkbox ng-model="main.newpackage.member">
                        For SCBWI Members
                    </md-checkbox>
                    <br />
                    <md-input-container>
                        <label>Title</label>
                        <input type="text" ng-model="main.newpackage.title" />
                    </md-input-container>
                    <md-input-container>
                        <label>Description</label>
                        <input type="text" ng-model="main.newpackage.description" />
                    </md-input-container>
                    <md-input-container>
                        <label>Regular Price</label>
                        <input type="text" ng-model="main.newpackage.regprice" />
                    </md-input-container>
                    <md-input-container>
                        <label>Late Price</label>
                        <input type="text" ng-model="main.newpackage.lateprice" />
                    </md-input-container>
                    <md-input-container>
                        <label>Max Attendees (0 for no limit)</label>
                        <input type="text" ng-model="main.newpackage.maxattendees" />
                    </md-input-container>
                </md-card-content>
                <md-card-actions layout="row" layout-align="end center">
                    <md-button ng-click="main.Submit()" class="md-raised md-primary">Submit</md-button>
                </md-card-actions>
            </md-card>
        </form>
    </md-content>
</div>